<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- 顶部状态栏 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 左侧玩家区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftPlayerArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toTopOf="@id/playerHandArea">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/leftPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="玩家2" />

            <TextView
                android:id="@+id/leftPlayerCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="剩余: 13" />

            <!-- 左侧玩家出牌区域 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leftPlayerPlayedCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 中央出牌区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/centerPlayArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toEndOf="@id/leftPlayerArea"
        app:layout_constraintEnd_toStartOf="@id/rightPlayerArea"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toTopOf="@id/playerHandArea">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

            <!-- 上一手牌 -->
            <TextView
                android:id="@+id/tvLastPlayedCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                tools:text="上一手牌: 3♠ 4♠ 5♠" />

            <!-- 游戏状态 -->
            <TextView
                android:id="@+id/tvGameStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:text="游戏状态" />

            <!-- 当前玩家 -->
            <TextView
                android:id="@+id/tvCurrentPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:text="当前玩家: 玩家1" />

            <!-- 中央牌池 -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/centerCardPool"
                    android:layout_width="match_parent"
                    android:layout_height="334dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 右侧玩家区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rightPlayerArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toTopOf="@id/playerHandArea">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/rightPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="玩家4" />

            <TextView
                android:id="@+id/rightPlayerCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="剩余: 13" />

            <!-- 右侧玩家出牌区域 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rightPlayerPlayedCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 上方玩家区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topPlayerArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintStart_toStartOf="@id/centerPlayArea"
        app:layout_constraintEnd_toEndOf="@id/centerPlayArea">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/topPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="玩家3" />

            <TextView
                android:id="@+id/topPlayerCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="剩余: 13" />

            <!-- 上方玩家出牌区域 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topPlayerPlayedCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 玩家手牌区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/playerHandArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <!-- 玩家出牌区域 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerPlayedCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal" />

            <!-- 玩家手牌 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlayerHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="提示"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/color_hint"
                    style="@style/Widget.MaterialComponents.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="出牌"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/color_primary"
                    style="@style/Widget.MaterialComponents.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不出"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/color_pass"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 