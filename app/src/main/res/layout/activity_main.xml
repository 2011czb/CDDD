<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锄大地"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <RadioGroup
        android:id="@+id/gameModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        tools:layout_editor_absoluteX="15dp">

        <RadioButton
            android:id="@+id/modeSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="单人模式"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="185dp" />

        <RadioButton
            android:id="@+id/modeMulti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多人模式"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="233dp" />

        <RadioButton
            android:id="@+id/modeTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试模式"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="281dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/gameRuleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/gameModeGroup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择游戏规则："
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/ruleNorth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="北方规则"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/ruleSouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="南方规则"
            android:textSize="16sp" />

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/playerNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="玩家名称"
        app:layout_constraintTop_toBottomOf="@id/gameRuleGroup"
        tools:layout_editor_absoluteX="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/playerNameInput"
            android:layout_width="379dp"
            android:layout_height="58dp"
            android:inputType="text"
            android:maxLines="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="580dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="开始游戏"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/playerNameLayout"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择游戏模式："
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="124dp" />

</androidx.constraintlayout.widget.ConstraintLayout>